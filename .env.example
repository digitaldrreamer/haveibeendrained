# Shared Environment Variables (used by Docker Compose and all services)
# Copy this file to .env and fill in your actual values

# Helius RPC API Key - Get from https://helius.dev dashboard
# Look for "RPC API Key" in the API Keys section
HELIUS_API_KEY=YOUR_HELIUS_API_KEY

# Solana Network Configuration
SOLANA_NETWORK=devnet
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com
ANCHOR_WALLET=/absolute/path/to/your/anchor-id.json
DRIP_PROGRAM_ID=YOUR_PROGRAM_ID

# Database (internal Docker service names)
DATABASE_URL=postgres://postgres:postgres@postgres:5432/haveibeendrained

# Redis (internal Docker service names)
REDIS_URL=redis://redis:6379
