{
    "manifest_version": 3,
    "name": "Have I Been Drained?",
    "version": "1.0.0",
    "description": "Check Solana wallet addresses for security threats and known drainers",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Check Wallet Security"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.haveibeendrained.org/*",
        "http://localhost:3001/*"
    ]
}