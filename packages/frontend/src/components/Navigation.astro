---
import logo from '../assets/logo.svg';
import WalletButton from './WalletButton.svelte';
import WalletConnectIsland from './WalletConnectIsland.svelte';
---

<nav class="w-full border-b-4 border-black bg-surface sticky top-0 z-50 shadow-brutal-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center gap-3 hover:opacity-90 transition-opacity">
          <img src={logo.src} alt="Have I Been Drained Logo" class="h-10 w-10" width="40" height="40" />
          <span class="text-xl font-black text-white uppercase tracking-tight">
            Have I Been Drained?
          </span>
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-text-muted hover:text-white font-bold transition-colors border-b-2 border-transparent hover:border-white px-2 py-1">
          Home
        </a>
        <a href="https://docs.haveibeendrained.org" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-white font-bold transition-colors border-b-2 border-transparent hover:border-white px-2 py-1">
          Docs
        </a>
        <a href="https://docs.haveibeendrained.org/safety-education" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-white font-bold transition-colors border-b-2 border-transparent hover:border-white px-2 py-1">
          Learn
        </a>
        <a href="https://github.com/digitaldrreamer/haveibeendrained" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-white font-bold transition-colors border-b-2 border-transparent hover:border-white px-2 py-1">
          GitHub
        </a>
      </div>

      <!-- Wallet Connect Button -->
      <div class="hidden md:flex items-center gap-2">
        <WalletButton client:load />
        <div id="wallet-connect-desktop" class="flex items-center">
          <WalletConnectIsland client:load />
        </div>
      </div>

      <!-- Mobile Menu Button and Wallet -->
      <div class="md:hidden flex items-center gap-4">
        <WalletButton client:load />
        <div id="wallet-connect-mobile" class="flex items-center">
          <WalletConnectIsland client:load />
        </div>
        <button id="mobile-menu-button" class="text-text-muted hover:text-white transition-colors border-2 border-black p-2 bg-surface shadow-brutal-sm" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-2 border-t-2 border-black mt-2 pt-4">
      <a href="/" class="block px-4 py-3 text-text-muted hover:text-white hover:bg-surface-elevated font-bold transition-colors border-l-4 border-transparent hover:border-primary">
        Home
      </a>
      <a href="https://docs.haveibeendrained.org" target="_blank" rel="noopener noreferrer" class="block px-4 py-3 text-text-muted hover:text-white hover:bg-surface-elevated font-bold transition-colors border-l-4 border-transparent hover:border-primary">
        Docs
      </a>
      <a href="https://docs.haveibeendrained.org/safety-education" target="_blank" rel="noopener noreferrer" class="block px-4 py-3 text-text-muted hover:text-white hover:bg-surface-elevated font-bold transition-colors border-l-4 border-transparent hover:border-primary">
        Learn
      </a>
      <a href="https://github.com/digitaldrreamer/haveibeendrained" target="_blank" rel="noopener noreferrer" class="block px-4 py-3 text-text-muted hover:text-white hover:bg-surface-elevated font-bold transition-colors border-l-4 border-transparent hover:border-primary">
        GitHub
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>

